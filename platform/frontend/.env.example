# Auth.js Configuration
AUTH_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_URL=http://localhost:5176

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth (Get from Azure Portal)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# LinkedIn OAuth (Get from LinkedIn Developer Portal)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# SMS/WhatsApp Service (Choose one)
# WhatsApp Business API (Meta)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# AWS SNS (Alternative SMS service)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Service (AWS SES)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-aws-ses-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-ses-secret-key

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sme_platform
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_URL=http://localhost:5176/api

# Development Settings
NODE_ENV=development
