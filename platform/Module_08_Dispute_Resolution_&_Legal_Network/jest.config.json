{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.service.ts",
        "**/*.controller.ts",
        "!**/*.spec.ts",
        "!**/node_modules/**",
        "!**/dist/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coverageThresholds": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "setupFilesAfterEnv": [
        "<rootDir>/test/setup.ts"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/$1"
    }
}