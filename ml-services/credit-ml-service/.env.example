# .env file for ML service configuration

# Service configuration
SERVICE_NAME=credit-ml-service
SERVICE_PORT=8000
LOG_LEVEL=INFO

# Model configuration
MODEL_DIR=./models
MODEL_VERSION=1.0.0
USE_NEURAL_NET=false

# Ensemble weights (optional, will use defaults if not set)
# ENSEMBLE_WEIGHT_XGBOOST=0.40
# ENSEMBLE_WEIGHT_LIGHTGBM=0.35
# ENSEMBLE_WEIGHT_NN=0.25

# Performance settings
MAX_WORKERS=4
TIMEOUT_SECONDS=30

# MLflow (optional - for experiment tracking)
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=credit-scoring

# Redis (optional - for caching)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL_SECONDS=3600
