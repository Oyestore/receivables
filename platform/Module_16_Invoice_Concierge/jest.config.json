{
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "src/**/*.(t|j)s",
        "!src/**/*.module.ts",
        "!src/**/*.entity.ts",
        "!src/**/index.ts",
        "!src/config/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/src/",
        "<rootDir>/tests/"
    ],
    "preset": "ts-jest"
}