# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Performance Configuration
MAX_CONCURRENT_DISTRIBUTIONS=50
RATE_LIMIT_WINDOW_MS=60000
