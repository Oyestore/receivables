# SME Platform - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sme_platform
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password

# Database Connection Pool Settings
DB_POOL_MIN=2                    # Minimum connections to maintain
DB_POOL_MAX=20                   # Maximum connections allowed
DB_POOL_SIZE=20                  # Pool size (same as max)

# Database Timeout Settings (milliseconds)
DB_IDLE_TIMEOUT=30000            # Close idle connections after (30s)
DB_CONNECTION_TIMEOUT=10000      # Connection attempt timeout (10s)
DB_ACQUIRE_TIMEOUT=30000         # Max wait for connection from pool (30s)
DB_STATEMENT_TIMEOUT=60000       # SQL query timeout (60s)
DB_MAX_QUERY_TIME=60000          # Max query execution time (60s)
DB_CONNECT_TIMEOUT=10000         # Initial connection timeout (10s)

# Database Cache Settings
DB_CACHE_ENABLED=false           # Enable query result caching
DB_CACHE_DURATION=60000          # Cache TTL in milliseconds (1 min)

# Database SSL Settings (Production)
DB_SSL_REJECT_UNAUTHORIZED=false # Reject unauthorized SSL certificates

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# RAZORPAY (Payments)
# Get from: https://dashboard.razorpay.com/app/keys
# ===========================================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ===========================================
# RESEND (Email)
# Get from: https://resend.com/api-keys
# Free tier: 3,000 emails/month
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# CLOUDFLARE R2 (Storage)
# Get from: https://dash.cloudflare.com
# Free tier: 10GB storage
# ===========================================
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=sme-platform
R2_PUBLIC_URL=https://your-bucket.r2.dev

# ===========================================
# WHATSAPP (Meta Cloud API)
# Get from: https://developers.facebook.com
# Free tier: 1,000 conversations/month
# ===========================================
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_id
WHATSAPP_APP_SECRET=your_app_secret

# ===========================================
# FX RATES (Frankfurter - FREE)
# No configuration needed!
# API: https://www.frankfurter.app
# ===========================================
# (No keys required - open source API)

# ===========================================
# AI (DeepSeek R1 - Local)
# ===========================================
DEEPSEEK_BASE_URL=http://localhost:11434
DEEPSEEK_MODEL=deepseek-r1

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_at_least_32_chars
FRONTEND_URL=http://localhost:3001

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================
# MIXPANEL_TOKEN=your_token
# GOOGLE_ANALYTICS_ID=G-XXXXXXX
