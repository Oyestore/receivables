# Environment Configuration Template
# Copy this to .env.production and fill in with actual values

# Application
NODE_ENV=production
PORT=3012

# Database (PostgreSQL)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=sme_platform
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT Authentication
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# Frontend URL
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# External Services (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Sentry (Error tracking)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_ML_FEATURES=true
ENABLE_REALTIME=true
