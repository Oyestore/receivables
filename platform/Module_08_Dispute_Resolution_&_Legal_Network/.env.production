# Production Environment Configuration for Module 08

# Application Configuration
NODE_ENV=production
PORT=3008
APP_NAME=Module_08_Dispute_Resolution
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5433/sme_platform_dispute
DB_HOST=localhost
DB_PORT=5433
DB_NAME=sme_platform_dispute
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6380/0
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_POOL_MIN=5
REDIS_POOL_MAX=20

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# MSME Portal Configuration
MSME_PORTAL_API_URL=https://samadhaan.msme.gov.in/api
MSME_CLIENT_ID=your_msme_client_id
MSME_CLIENT_SECRET=your_msme_client_secret
MSME_REDIRECT_URI=https://your-domain.com/api/v1/msme/callback
MSME_WEBHOOK_SECRET=your_webhook_secret

# Email Service Configuration
EMAIL_SERVICE_URL=https://email-service.your-domain.com
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=SME Platform Dispute Resolution

# SMS Service Configuration
SMS_SERVICE_URL=https://sms-service.your-domain.com
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=SMEPLT

# Document Storage Configuration
DOCUMENT_STORAGE_URL=https://storage.your-domain.com
DOCUMENT_STORAGE_ACCESS_KEY=your_storage_access_key
DOCUMENT_STORAGE_SECRET_KEY=your_storage_secret_key
DOCUMENT_STORAGE_BUCKET=dispute-documents
DOCUMENT_STORAGE_REGION=ap-south-1

# Legal Network Configuration
LEGAL_NETWORK_API_URL=https://legal-network.your-domain.com
LEGAL_NETWORK_API_KEY=your_legal_network_api_key

# Digital Signature Service Configuration
DIGITAL_SIGNATURE_SERVICE_URL=https://digital-signature.your-domain.com
DIGITAL_SIGNATURE_API_KEY=your_digital_signature_api_key
DIGITAL_SIGNATURE_CERT_ID=your_cert_id

# External Service Integration
INVOICE_SERVICE_URL=https://invoice-service.your-domain.com
PAYMENT_SERVICE_URL=https://payment-service.your-domain.com
NOTIFICATION_SERVICE_URL=https://notification-service.your-domain.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/application.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9464
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_TTL=3600
MAX_REQUEST_SIZE=10mb

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_PATH=/app/uploads

# Business Logic Configuration
DEFAULT_DISPUTE_PRIORITY=medium
MAX_DISPUTE_AMOUNT=10000000
COLLECTION_SEQUENCE_TIMEOUT_DAYS=90
APPROVAL_EXPIRY_HOURS=72
DOCUMENT_RETENTION_DAYS=2555

# Feature Flags
ENABLE_MSME_INTEGRATION=true
ENABLE_DIGITAL_SIGNATURES=true
ENABLE_AI_PREDICTION=true
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_COLLECTION_SEQUENCES=true

# Backup and Maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_WEBHOOK_ENABLED=true
NOTIFICATION_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ANONYMIZATION_ENABLED=false
GDPR_COMPLIANCE_ENABLED=true
PII_ENCRYPTION_ENABLED=true

# Development/Testing (set to false in production)
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false
