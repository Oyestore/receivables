# Module 12 Administration - Production Environment Configuration

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NODE_ENV=production
PORT=3012
API_PREFIX=api/v1

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=sme_platform_admin
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/sme_platform_admin
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=2
REDIS_URL=redis://:your_redis_password@localhost:6379/2

# =================================================================
# JWT CONFIGURATION
# =================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_for_admin_module_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_for_admin_module_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# =================================================================
# ADMINISTRATION MODULE CONFIGURATION
# =================================================================
# Tenant Management
ADMIN_TENANT_DEFAULT_PLAN=basic
ADMIN_TENANT_TRIAL_PERIOD_DAYS=30
ADMIN_TENANT_MAX_USERS_PER_PLAN=1000
ADMIN_TENANT_AUTO_APPROVE=false

# User Management
ADMIN_USER_PASSWORD_MIN_LENGTH=12
ADMIN_USER_PASSWORD_EXPIRY_DAYS=90
ADMIN_USER_MAX_LOGIN_ATTEMPTS=5
ADMIN_USER_LOCKOUT_DURATION=30
ADMIN_USER_SESSION_TIMEOUT=8h

# Subscription Management
ADMIN_SUBSCRIPTION_DEFAULT_CURRENCY=USD
ADMIN_SUBSCRIPTION_BILLING_CYCLE=monthly
ADMIN_SUBSCRIPTION_GRACE_PERIOD_DAYS=7
ADMIN_SUBSCRIPTION_OVERAGE_RATE_MULTIPLIER=1.5

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# MFA Configuration
MFA_ISSUER=SME Platform Admin
MFA_WINDOW=1
MFA_DIGITS=6

# OAuth2 Configuration
OAUTH2_GOOGLE_CLIENT_ID=your_google_oauth2_client_id
OAUTH2_GOOGLE_CLIENT_SECRET=your_google_oauth2_client_secret
OAUTH2_MICROSOFT_CLIENT_ID=your_microsoft_oauth2_client_id
OAUTH2_MICROSOFT_CLIENT_SECRET=your_microsoft_oauth2_client_secret

# SAML Configuration
SAML_ENTRY_POINT=https://your-saml-provider.com/sso
SAML_ISSUER=sme-platform-admin
SAML_CERT_PATH=/etc/ssl/certs/saml-cert.pem
SAML_PRIVATE_KEY_PATH=/etc/ssl/private/saml-key.pem

# =================================================================
# COMPLIANCE CONFIGURATION
# =================================================================
# Data Residency
COMPLIANCE_DEFAULT_DATA_RESIDENCY=default
COMPLIANCE_DATA_RETENTION_DAYS=2555
COMPLIANCE_AUDIT_LOG_RETENTION_DAYS=3650
COMPLIANCE_GDPR_COMPLIANCE=true
COMPLIANCE_SOC2_COMPLIANCE=true

# Risk Assessment
RISK_ASSESSMENT_ENABLED=true
RISK_ASSESSMENT_THRESHOLD=0.7
RISK_ASSESSMENT_FREQUENCY=daily
RISK_ASSESSMENT_NOTIFICATION_EMAIL=admin@yourcompany.com

# =================================================================
# NOTIFICATION CONFIGURATION
# =================================================================
# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=admin@yourcompany.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME=SME Platform Admin

# SMS Configuration
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# =================================================================
# MONITORING CONFIGURATION
# =================================================================
# Metrics
METRICS_ENABLED=true
METRICS_PORT=9092
METRICS_PATH=/metrics

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/sme-platform/admin.log
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_FILES=10

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# =================================================================
# PERFORMANCE CONFIGURATION
# =================================================================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =================================================================
# INTEGRATION CONFIGURATION
# =================================================================
# Partner Management
PARTNER_MARKETPLACE_ENABLED=true
PARTNER_WEBHOOK_SECRET=your_webhook_secret_for_partners
PARTNER_API_RATE_LIMIT=1000

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=segment
ANALYTICS_WRITE_KEY=your_segment_write_key
ANALYTICS_BATCH_SIZE=100

# AI/ML Services
AI_PERSONALIZATION_ENABLED=true
AI_PERSONALIZATION_PROVIDER=openai
AI_PERSONALIZATION_API_KEY=your_openai_api_key
ML_CAPACITY_PLANNING_ENABLED=true
ML_CAPACITY_PLANNING_MODEL_PATH=/models/capacity-planning

# =================================================================
# BACKUP CONFIGURATION
# =================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sme-platform-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# =================================================================
# MAINTENANCE CONFIGURATION
# =================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=SME Platform Admin is currently under maintenance
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# =================================================================
# DEVELOPMENT/OVERRIDE CONFIGURATION
# =================================================================
# Override any of the above settings in development
# These values should NOT be used in production
DEV_DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/sme_platform_admin_dev
DEV_REDIS_URL=redis://localhost:6379/1
DEV_LOG_LEVEL=debug
