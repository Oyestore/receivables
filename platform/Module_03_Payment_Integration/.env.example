# Application Configuration
NODE_ENV=development
PORT=3003
API_PREFIX=api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5434/payment_db
DB_HOST=localhost
DB_PORT=5434
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=payment_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
VALID_API_KEYS=sk-test-key,sk-prod-key

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

PAYU_MERCHANT_KEY=your-payu-merchant-key
PAYU_MERCHANT_SALT=your-payu-merchant-salt
PAYU_WEBHOOK_URL=https://your-domain.com/webhooks/payu

CCAVENUE_MERCHANT_ID=your-ccavenue-merchant-id
CCAVENUE_ACCESS_CODE=your-ccavenue-access-code
CCAVENUE_WORKING_KEY=your-ccavenue-working-key
CCAVENUE_WEBHOOK_URL=https://your-domain.com/webhooks/ccavenue

# UPI Configuration
UPI_PROVIDER_API_KEY=your-upi-provider-api-key
UPI_MERCHANT_ID=your-upi-merchant-id
UPI_VPA=your-upi-vpa
UPI_WEBHOOK_URL=https://your-domain.com/webhooks/upi

# Voice Payment Configuration
VOICE_PROVIDER_API_KEY=your-voice-provider-api-key
VOICE_PROVIDER_WEBHOOK_URL=https://your-domain.com/webhooks/voice
VOICE_PROVIDER_SECRET=your-voice-provider-secret

# SMS Payment Configuration
SMS_SERVICE_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
EMAIL_SERVICE_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=Your Company

# Accounting Integration Configuration
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REDIRECT_URI=https://your-domain.com/auth/zoho/callback

BUSY_DATABASE_HOST=localhost
BUSY_DATABASE_PORT=3306
BUSY_DATABASE_USERNAME=business
BUSY_DATABASE_PASSWORD=password
BUSY_DATABASE_NAME=business_db

QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=https://your-domain.com/auth/quickbooks/callback

MARG_API_KEY=your-marg-api-key
MARG_API_SECRET=your-marg-api-secret

# Queue Configuration (BullMQ)
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=
QUEUE_CONCURRENCY=10
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_DELAY=2000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Security Configuration
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# External API Configuration
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Business Configuration
DEFAULT_PAYMENT_GATEWAY=razorpay
DEFAULT_CURRENCY=INR
MAX_PAYMENT_AMOUNT=1000000
MIN_PAYMENT_AMOUNT=1
PAYMENT_TIMEOUT=1800

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000

# Performance Configuration
CACHE_TTL_SECONDS=300
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Fraud Detection Configuration
FRAUD_DETECTION_ENABLED=true
FRAUD_SCORE_THRESHOLD=70
MAX_ATTEMPTS_PER_HOUR=5
BLOCK_DURATION_HOURS=24

# Voice Payment Configuration
VOICE_ENABLED=true
VOICE_LANGUAGE=en
VOICE_MAX_DURATION=300
VOICE_SAMPLE_RATE=16000

# Development Configuration
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_SWAGGER=true
ENABLE_PROFILING=false

# Compliance Configuration
COMPLIANCE_PCI_DSS=true
COMPLIANCE_GDPR=true
COMPLIANCE_RBI=true
DATA_ENCRYPTION_KEY=your-32-character-encryption-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=ap-south-1

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_WEBHOOK_ENABLED=true

# Integration Configuration
INTEGRATION_TIMEOUT=60000
INTEGRATION_RETRY_ATTEMPTS=3
INTEGRATION_BATCH_SIZE=50

# AI Configuration
AI_SERVICE_ENABLED=true
AI_MODEL_PATH=./models
AI_CONFIDENCE_THRESHOLD=0.8
AI_MAX_CONCURRENT_REQUESTS=10
