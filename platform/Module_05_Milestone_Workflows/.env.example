# =====================================================
# Environment Variables Configuration
# =====================================================
# Copy this file to .env and update with your values

# Application Configuration
NODE_ENV=development
PORT=3005
API_PREFIX=api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5435
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=milestone_workflows
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# API Security
API_KEY_HEADER=x-api-key
API_KEY_PREFIX=mw-
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,gif,mp4,avi

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@milestone-workflows.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=milestone-workflows-files

# Monitoring Configuration
LOG_LEVEL=info
LOG_DIR=./logs
ENABLE_METRICS=true
METRICS_PORT=9090

# External Integrations
INVOICE_MODULE_URL=http://localhost:3001
PAYMENT_MODULE_URL=http://localhost:3003
ANALYTICS_MODULE_URL=http://localhost:3004

# Workflow Configuration
WORKFLOW_TIMEOUT=3600000
MAX_WORKFLOW_RETRIES=3
WORKFLOW_CLEANUP_INTERVAL=3600000

# Notification Configuration
NOTIFICATION_QUEUE_NAME=notifications
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_SECRET=your-cookie-secret-change-in-production

# Performance Configuration
QUERY_TIMEOUT=30000
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_TIMEOUT=10000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_WORKFLOW_VISUALIZATION=true

# Development Configuration
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# Production Configuration
PRODUCTION_DB_HOST=your-production-db-host
PRODUCTION_DB_PORT=5432
PRODUCTION_DB_USERNAME=your-production-db-user
PRODUCTION_DB_PASSWORD=your-production-db-password
PRODUCTION_DB_DATABASE=milestone_workflows_prod

PRODUCTION_REDIS_HOST=your-production-redis-host
PRODUCTION_REDIS_PORT=6379
PRODUCTION_REDIS_PASSWORD=your-production-redis-password

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CA_PATH=/path/to/ssl/ca.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=milestone-workflows-backups

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Pagination Configuration
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=200

# Search Configuration
SEARCH_INDEX_NAME=milestones
SEARCH_BATCH_SIZE=100
SEARCH_REFRESH_INTERVAL=30000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=60000

# Workflow Engine Configuration
WORKFLOW_ENGINE_TYPE=bullmq
WORKFLOW_CONCURRENCY=10
WORKFLOW_MAX_ATTEMPTS=3
WORKFLOW_BACKOFF_TYPE=exponential

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_ENCRYPTION_ENABLED=true
STORAGE_COMPRESSION_ENABLED=true

# Multi-tenancy Configuration
MULTI_TENANT_ENABLED=true
TENANT_ISOLATION_LEVEL=database
DEFAULT_TENANT_ID=default

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=info

# Integration Configuration
ERP_INTEGRATION_ENABLED=false
CRM_INTEGRATION_ENABLED=false
PROJECT_MANAGEMENT_INTEGRATION_ENABLED=false

# Regional Configuration
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR
DEFAULT_LOCALE=en-IN

# AI/ML Configuration
AI_MODEL_ENDPOINT=https://api.openai.com/v1
AI_MODEL_API_KEY=your-openai-api-key
AI_MODEL_NAME=gpt-4
AI_MODEL_MAX_TOKENS=2048
AI_MODEL_TEMPERATURE=0.7

# Monitoring and Alerting
ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
ALERT_EMAIL_RECIPIENTS=admin@company.com,ops@company.com

# Performance Monitoring
ENABLE_APM=true
APM_SERVICE_NAME=milestone-workflows
APM_ENVIRONMENT=development

# Database Migration Configuration
AUTO_MIGRATE=false
MIGRATION_TIMEOUT=300000

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5435/milestone_workflows_test
TEST_REDIS_URL=redis://localhost:6379/1
