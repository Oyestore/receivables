# Module 02: Intelligent Distribution - Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=sme_platform

# Email Service Configuration
DEFAULT_FROM_EMAIL=noreply@smeplatform.com

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS SES Configuration
AWS_SES_ACCESS_KEY=your_aws_access_key
AWS_SES_SECRET_KEY=your_aws_secret_key
AWS_SES_HOST=email-smtp.us-east-1.amazonaws.com
AWS_REGION=us-east-1

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# SMS Service Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_SENDER_NUMBER=+1234567890

# AWS SNS Configuration
AWS_SNS_ACCESS_KEY=your_aws_sns_access_key
AWS_SNS_SECRET_KEY=your_aws_sns_secret_key

# Plivo Configuration
PLIVO_AUTH_ID=your_plivo_auth_id
