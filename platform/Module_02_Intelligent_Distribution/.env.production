# Application Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5433/distribution_db
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=distribution_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis Configuration
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
VALID_API_KEYS=sk-test-key,sk-prod-key

# Email Service Configuration
EMAIL_SERVICE_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=Your Company

# AWS SES Configuration
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourcompany.com

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com

# SMS Service Configuration
SMS_SERVICE_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration
AWS_SNS_ACCESS_KEY=your-aws-access-key
AWS_SNS_SECRET_KEY=your-aws-secret-key
AWS_SNS_REGION=us-east-1

# Plivo Configuration
PLIVO_AUTH_ID=your-plivo-auth-id
PLIVO_AUTH_TOKEN=your-plivo-auth-token
PLIVO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhooks/whatsapp
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token

# Queue Configuration (BullMQ)
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6380
BULL_REDIS_PASSWORD=
QUEUE_CONCURRENCY=10
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_DELAY=2000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Security Configuration
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# External API Configuration
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Business Configuration
DEFAULT_DISTRIBUTION_CHANNEL=email
DEFAULT_FOLLOW_UP_DELAY_hours=24
MAX_FOLLOW_UP_ATTEMPTS=5
BATCH_PROCESSING_SIZE=100

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000

# Performance Configuration
CACHE_TTL_SECONDS=300
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Development Configuration
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_SWAGGER=true
ENABLE_PROFILING=false
